# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

aws_region         = "us-east-1"
registry_name      = "example-schema-registry"
registry_description = "Example Glue Schema Registry"

# Default compatibility mode for schemas without metadata files
default_compatibility = "BACKWARD"

# Base path for schema files (default: "../schemas" - points to root schemas/ directory)
# schemas_base_path = "../schemas"

# Optional: Additional schemas can be defined here manually
# (file-based schemas in schemas/ directory are automatically discovered)
# schemas = {
#   "manual-schema" = {
#     description       = "Manually defined schema"
#     data_format       = "AVRO"
#     schema_definition = <<-EOT
#       {
#         "type": "record",
#         "name": "Example",
#         "namespace": "com.example",
#         "fields": [
#           {"name": "id", "type": "string"},
#           {"name": "name", "type": "string"}
#         ]
#       }
#     EOT
#     compatibility     = "BACKWARD"
#     tags = {
#       Environment = "dev"
#       Project     = "example"
#     }
#   }
# }

tags = {
  ManagedBy = "Terraform"
  Project   = "aws-glue-schema-registry"
}
