# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

aws_region         = "us-east-1"
registry_name      = "example-schema-registry"
registry_description = "Example Glue Schema Registry"

# Compatibility mode for SalesforceAudit schema (BACKWARD, FORWARD, FULL, etc.)
salesforce_audit_compatibility = "BACKWARD"

# Optional: Additional schemas can be defined here
schemas = {
  "example-schema" = {
    description       = "Example schema"
    data_format       = "AVRO"
    schema_definition = <<-EOT
      {
        "type": "record",
        "name": "Example",
        "namespace": "com.example",
        "fields": [
          {"name": "id", "type": "string"},
          {"name": "name", "type": "string"}
        ]
      }
    EOT
    compatibility     = "BACKWARD"
    tags = {
      Environment = "dev"
      Project     = "example"
    }
  }
}

tags = {
  ManagedBy = "Terraform"
  Project   = "aws-glue-schema-registry"
}
